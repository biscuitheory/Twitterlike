<div class="user-posts-container">
    <div class="post-box">
        <a class="avatar" href="tweet/{{row.id}}">
            <img src="/images/forfun.png" alt="">
        </a>
        <div class="text-content">
            <div class="metadata">
                <div class="author">
                    {{row.id_author}}
                </div>
                <div class="date">
                    
                    {{moment row.creation "fromNow"}}
                </div>
            </div>
            <div class="post-content">
                <p class="post-text">{{row.text}}</p>
            </div>
        </div>
    </div>
</div>
