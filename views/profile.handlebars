<div class="dashboard">
    <div class="dashboard-navbar">{{> nav}}</div>
    <div class="dashboard-profile">
        <div class="header-profile">
            <a href="/dashboard/{{username}}"><img src="/images/dash_navbar/icons_navbar/svg18.svg" class="back-arrow icon" alt="flèche retour dashboard utilisateur"></a>
            <h1 class="header-text">{{firstname}} {{lastname}} </h1>
        </div>
        <div class="profile-container">
            <div class="profile-bgimg"></div>
            <img src="{{avatar}}" class="profile-img avatar-img" alt="">
            <div class="profile-text">
                <div class="account-infos">
                    <div class="author-name">{{firstname}} {{lastname}} </div>
                    <div class="author-username">@{{username}}</div>
                    <div class="author-city">{{city}}</div>
                </div>
                <div class="tweets-tab">Tweets</div>
            </div>
        </div>
    <div class="user-posts-container">
        {{#each tweets}}
        <div class="post-box">
            <a class="avatar" href="{{row.id}}">
                <img src="{{row.avatar}}" class="avatar-img" alt="photo de profil">
            </a>
            <div class="text-content">
                <div class="metadata">
                    <div class="author-name">
                        {{row.firstname}} {{row.lastname}}
                    </div>
                    <div class="author-username">
                        @{{row.username}} ·
                    </div>
                    <div class="date">
                        
                        {{moment row.creation "fromNow"}}
                    </div>
                </div>
                <div class="post-content">
                    <p class="post-text">{{row.text}}</p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    </div>
    <div class="dashboard-search">
        <div class="box-suggestions">
            <div class="heading heading-suggestions">
                <h1>Suggestions</h1>
            </div>
            <div class="user">
            </div>
        </div>
    </div>
    </div>
</div>